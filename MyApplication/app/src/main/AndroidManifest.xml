<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.app.jason.ragerelease" >

    <!-- Setting the Rage Release application up. -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Setting the Splash Screen Activity. -->
        <activity
            android:name=".app.GameStates.SplashScreen"
            android:label="@string/app_name" >

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Setting the Title Screen activity. -->
        <activity
            android:name=".app.GameStates.TitleScreen"
            android:label="Rage Release">
        </activity>

        <!-- Setting the Main Menu activity. -->
        <activity
            android:name=".app.GameStates.MainMenu"
            android:label="Rage Release">
        </activity>

        <!-- Setting the Player Selection activity. -->
        <activity
            android:name=".app.GameStates.SelectionScreen"
            android:label="Rage Release">
        </activity>

        <!-- Setting the Player Selection activity. -->
        <activity
            android:name=".app.GameStates.PlayerSelection"
            android:label="Rage Release">
        </activity>

        <!-- Setting the Enemy Selection activity. -->
        <activity
            android:name=".app.GameStates.EnemySelection"
            android:label="Rage Release">
        </activity>

        <!-- Setting the Game activity. -->
        <activity
            android:name=".app.GameStates.Game"
            android:label="Rage Release"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden">
        </activity>

        <!-- Setting the Game activity. -->
        <activity
            android:name=".app.GameStates.GameOver"
            android:label="Rage Release"
            android:screenOrientation="landscape"
            android:configChanges="orientation|keyboardHidden">
        </activity>

        <!-- Setting the Options activity. -->
        <activity
            android:name=".app.GameStates.Options"
            android:label="Rage Release">
        </activity>

        <!-- Setting the Credits activity. -->
        <activity
            android:name=".app.GameStates.Credits"
            android:label="Rage Release">
        </activity>

    </application>

</manifest>
